<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@String.Format(Resources.Layout.Title, ViewBag.Title)</title>
	@Styles.Render("~/Content/css")
	@RenderSection("styles", required: false)

	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="container body-content">
		<header>
			<h1 class="h1"><a href="@Url.Action(MVC.Home.Index())">@Resources.Layout.EnlaceHome</a></h1>
		</header>
		<main>
			@RenderBody()
		</main>
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - @Resources.Layout.PiePagina</p>
		</footer>
	</div>
	@Scripts.Render("~/bundles/jquery")
	<script type="text/javascript">
		var resources = {}; // Global variable.

		(function ($) {
			$.ajax({
				dataType: "json",
				url: "@Url.Action("GetResources", "Resources")",
				async: false
			})
			.done(function (data) {
				resources = data;
			});
		})(jQuery);
	</script>
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
