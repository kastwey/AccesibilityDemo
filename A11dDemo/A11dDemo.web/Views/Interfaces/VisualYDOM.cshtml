@{
    ViewBag.Title = Resources.Interfaz.VerYEscuchar;
}

<h2>@Resources.Interfaz.VerYEscuchar</h2>
<div class="jumbotron">
    <div id="main">
        <span style="color:lightblue;" id="myBlue">@Resources.Interfaz.DesordenadoMe</span>&nbsp;<span style="color:coral;" id="myRed">@Resources.Interfaz.DesordenadoHola</span>&nbsp;<span style="color:pink;" id="myPink">@Resources.Interfaz.DesordenadoNombre</span>&nbsp;<span style="color:lightgreen;" id="myGreen">@Resources.Interfaz.DesordenadoLlamo</span>
    </div>

</div>
@section styles
{
    <style>
        #main {
            width: 400px;
            height: 150px;
            border: 1px solid #c3c3c3;
            display: -webkit-flex; /* Safari */
            display: flex;
            font-size: 18px;
        }
        
        #main span {
            width: 70px;
            height: 70px;
        }

        /* Safari 6.1+ */
        span#myRed {
            -webkit-order: 1;
        }

        span#myBlue {
            -webkit-order: 3;
        }

        span#myGreen {
            -webkit-order: 4;
        }

        span#myPink {
            -webkit-order: 2;
        }

        /* Standard syntax */
        span#myRed {
            order: 1;
        }

        span#myBlue {
            order: 2;
        }

        span#myGreen {
            order: 3;
        }

        span#myPink {
            order: 4;
        }
    </style>

}