@{
	ViewBag.Title = Resources.Estructura.SinEstructura;
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@String.Format(Resources.Layout.Title, ViewBag.Title)</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="container body-content">

		<div class="h1"><a href="@Url.Action(MVC.Home.Index())">@Resources.Layout.EnlaceHome</a></div>
		<div class="jumbotron">
			<div class="h2">@Resources.Estructura.EstoNoEstaBien</div>
			<p class="text-justify text-info">@Resources.Estructura.FalsosEncabezados</p>
			<div class="h2">@Resources.Estructura.ComoHacerloBien</div>
			<p class="text-justify text-warning">@Resources.Estructura.Usarlos</p>
		</div>
        <div class="h2">@Resources.Estructura.Menu</div>
        <div class="list-group">
            <p class="list-group-item"><a href="http://www.first.com">@Resources.Estructura.PrimerItem</a></p>
            <p class="list-group-item"><a href="http://www.second.com">@Resources.Estructura.SegundoItem</a></p>
            <p class="list-group-item"><a href="http://www.third.com">@Resources.Estructura.TercerItem</a></p>
        </div>
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - @Resources.Layout.PiePagina</p>
		</footer>
	</div>


	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")


</body>
</html>